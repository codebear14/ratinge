<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>servlets.SignUpServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchMovieServlet</servlet-name>
        <servlet-class>servlets.SearchMovieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchMovieServlet</servlet-name>
        <url-pattern>/SearchMovieServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetXMLRatingsServlet</servlet-name>
        <servlet-class>servlets.GetXMLRatingsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetXMLRatingsServlet</servlet-name>
        <url-pattern>/GetXMLRatingsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangeRatingServlet</servlet-name>
        <servlet-class>servlets.ChangeRatingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChangeRatingServlet</servlet-name>
        <url-pattern>/ChangeRatingServlet</url-pattern>
    </servlet-mapping>

</web-app>